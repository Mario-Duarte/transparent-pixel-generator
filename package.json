{
  "name": "transparent-pixel-generator",
  "version": "1.0.2",
  "author": {
    "name": "Mario Duarte"
  },
  "description": "A lightweight, dependency-free library to generate transparent pixel PNGs on the client-side, ideal for creating dynamic backgrounds and placeholders without server requests.",
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mario-Duarte/transparent-pixel-generator"
  },
  "type": "module",
  "main": "./lib/transparent-pixel-generator.umd.cjs",
  "module": "./lib/transparent-pixel-generator.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/transparent-pixel-generator.js",
      "require": "./lib/transparent-pixel-generator.umd.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --outDir lib && vite build --outDir lib",
    "preview": "vite preview --outDir lib",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "transparent",
    "pixel",
    "generator",
    "canvas",
    "image",
    "data-url",
    "base64",
    "png",
    "client-side",
    "lightweight"
  ]
}
